<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Book a Demo Overlay Button with Chatbot</title>
    <style>
        /* Ensure the iframe covers the entire area */
        #IframeDisplayElement {
            width: 100%;
            height: 100vh;
            border: none;
            position: relative; /* Relative position to allow absolute positioning of the button */
        }

        /* Style for the overlay button */
        .book-demo-button {
            position: absolute;
            top: 20px; /* Position the button in the top right corner */
            right: 20px;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            z-index: 1000; /* Ensure the button is on top of the iframe */
            text-decoration: none; /* Remove underline from the link */
            display: inline-block; /* Ensure the button displays correctly */
        }

        /* Hover effect for the button */
        .book-demo-button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>

<!-- The iframe element -->
<iframe id="IframeDisplayElement" src="https://aminos.ai/"></iframe>

<!-- The "Book a Demo" button overlay -->
<a href="https://calendly.com/tofuchat/demo" class="book-demo-button">Book a Demo Now</a>

<!-- Chatbot Script -->
<script src="https://app.tofuchat.io/js/chat_plugin.js" data-bot-id="30420"></script>

<script>
    // Function to check if the iframe content is accessible
    (function() {
        var iframe = document.getElementById('IframeDisplayElement');
        var iframeLoaded = false;

        // Set a timeout to check if the iframe has loaded
        var loadTimeout = setTimeout(function() {
            if (!iframeLoaded) {
                // Redirect the iframe to the dummy page URL
                iframe.src = 'https://tofuchat.io/';
            }
        }, 2000); // Adjust the timeout duration as needed

        // Event listener for iframe load
        iframe.onload = function() {
            iframeLoaded = true;
            clearTimeout(loadTimeout);
        };
    })();
</script>

</body>
</html>
